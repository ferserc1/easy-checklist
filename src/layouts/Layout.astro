---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--list-bg-color-odd: #0066db;
		--list-bg-color-even: #437ab9;
		--list-fg-color-odd: white;
		--list-fg-color-even: white;
	}

	body {
		font-family: sans-serif;
	}


</style>
